<body class="default_background">
  <div class="container">
    <div class="mt20">
      <%= render 'flash' %>
    </div>
    <div class="row userview">
      <% if @messages.any? %>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3>Messages:<span class="badge pull-right"><%= @messages_count %></span></h3>
            </div>
            <div class="panel-body">
              <ul class="list-group">
                <div id="message_panel">
                  <%= render 'messages/messages_profile', messages: @messages %>
                  <script>
                    for(var i = 5; i < <%= @messages_count %>; i++){
                      $('#message_' + i).hide();
                    }
                  </script>
                </div>
              </ul>
                <%= link_to 'show/hide all', '#', remote: true, class: "btn btn-xs btn-primary pull-right", id: "showhide", title: "Mark as complete" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <%= image_tag @user.qrcode, class: "img_size" %>
        <div class="url_positioning"><%= "goo.gl/#{@user.qr_code_uid}" %></div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <p>
          <strong>Name:</strong>
          <%= "#{@user.first_name} #{@user.last_name}" %>
        </p>
        <p>
          <strong>Cell number:</strong>
          <%= @user.cell_number %>
        </p>
        <p>
          <strong>Email</strong>
          <%= @user.email %>
        </p>
        <p>
          <strong>Points:</strong>
          <%= current_user.point_tally %>
        </p>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-warning" %>
        <%= link_to 'View my QRCode Stats', "http://goo.gl/#analytics/goo.gl/#{@user.qr_code_uid}/all_time", target: "_blank", class: "btn btn-success" %>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4">
        <% if current_user.point_tally >= 1 %>
          <%= image_tag "https://s3-us-west-2.amazonaws.com/ilostandfound/checkmark.png", class: "badge_img pull-right" %>
          <% end %>
        <% if current_user.point_tally >= 2 %>
          <%= image_tag 'https://s3-us-west-2.amazonaws.com/ilostandfound/thumbs_up.png', class: "badge_img pull-right" %>
        <% end %>
        <% if current_user.point_tally >= 3 %>
          <%= image_tag asset_path('angel.png'), class: "badge_img pull-right" %>
        <% end %>
      </div>

    <div class="row mt20 ml10">
      <div class="col-xs-4 col-sm-4 col-md-4">
        <div class="btn btn-primary">
          <%= link_to_function("Print this Page", "javascript:print()") %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'print', user: @user %>
  <div id="myModal"></div>
  <script>
    $('#showhide').on("click", function(){
      for(var i = 6; i < <%= @messages_count %>; i++ ){
        $('#message_' + i).slideToggle();
      }
    });

  </script>
</body>
