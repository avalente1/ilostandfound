<% if current_user.present? && @user.id == current_user.id   %>
  <body class="default_background">
    <div class="container">
      <div class="mt20">
        <%= render 'flash' %>
      </div>
      <div class='row'>
        <div class="col4 mt20">
          <p><% if @messages.any? %>
            <% @messages.each do |message| %>
            <table class="table table-condensed table-hover table-striped">
              <thead>
                <th>Name</th><th>Cell Number</th><th>Email</th><th>Subject</th><th>Message</th><th>Delivery</th>
              </thead>
              <tbody>
              <tr class="success">
                <td><%= User.find_by(id: message.find_id).try(:first_name) %></td>
                <td><%= User.find_by(id: message.find_id).try(:cell_number) %></td>
                <td><%= User.find_by(id: message.find_id).try(:email) %></td>
                <td><%= message.try(:subject) %></td>
                <td><%= message.try(:text) %></td>
                <td><%= link_to 'Show me options', test_url, class: "btn btn-primary btn-xs pull-ri" %></td>
              </tr>
              </tbody>
            </table>
            <% end %>
          <% end %></p>
          </div>

          <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4">
              <%= image_tag @user.qrcode, class: "img_size" %>
              <div class="url_positioning"><%= "goo.gl/#{@user.qr_code_uid}" %></div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
              <p>
                <strong>Name:</strong>
                <%= "#{@user.first_name} #{@user.last_name}" %>
              </p>
              <p>
                <strong>Cell number:</strong>
                <%= @user.cell_number %>
              </p>
              <p>
                <strong>Email</strong>
                <%= @user.email %>
              </p>
              <p>
                <strong>Points:</strong>
                <%= current_user.point_tally %>
              </p>
              <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-warning" %>
              <%= link_to 'View my QRCode Stats', "http://goo.gl/#analytics/goo.gl/#{@user.qr_code_uid}/all_time", class: "btn btn-success" %>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
              <% if current_user.point_tally >= 1 %>
                <%= image_tag "/assets/checkmark.png", class: "badge_img pull-right" %>
                <% end %>
              <% if current_user.point_tally >= 2 %>
                <%= image_tag '/assets/thumbs_up.png', class: "badge_img pull-right" %>
              <% end %>
              <% if current_user.point_tally >= 3 %>
                <%= image_tag '/assets/angel.png', class: "badge_img pull-right" %>
              <% end %>
            </div>

        </div>
      <div class="row mt20">
        <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="btn btn-primary">
            <%= link_to_function("Print this Page", "javascript:print()") %>
          </div>
        </div>
      </div>


      <div class="row multiprint_list">
        <div class="col4">
          <div class="groupprint1">

          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
        </div>
          <div class="groupprint2">
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
        </div>
          <div class="groupprint3">
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          <%= image_tag @user.qrcode, class: "img_size multiprinter" %>
          </div>
        </div>
      </div>
    </div>
  </body>
<% else %>
  <body id="thankspage">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h1 class="thanks-heading">You Rock!</h1>
          <h3 class="thankssubhead ml10">Looks like you found something beloning to <%= @user.first_name %></h3>
          <p class="thankstext ml10">Fill out this form and send an anonymous message to the owner.</p>
        </div>
        <div class="col-md-4 pt50">
          <%= render "form_finder"%>
        </div>
        <div class="col-md-3 pt25">
          <h3 class="thanks-heading">We really appreciate it!</h3>
          <p>Checkout these potential rewards:</p>
        </div>
      </div>
    </div>
  </body>
<% end %>
