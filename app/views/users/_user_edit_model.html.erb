<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3 class="modal-title color_red"><i class="icon-user"></i> Profile</h3>
        </div>
        <div class="modal-body">
          <ul class="list-unstyled">
            <div class="panel panel-danger">
              <div class="panel-heading">
                <h4>Edit your profile:

                </h4>
              </div>
              <div class="panel-body">
                <%= form_for(user, remote: true ) do |f| %>
                  <%= render 'errors', user: @user %>
                  <div class="field">
                    <%= f.text_field :first_name, class: "form-control", placeholder:"First Name" %>
                  </div>
                  <div class="field">
                    <%= f.text_field :last_name, class: "form-control mt10", placeholder: "Last Name" %>
                  </div>
                  <div class="field">
                    <%= f.text_field :cell_number, class: "form-control mt10", placeholder: "Cell Number" %>
                  </div>
                  <div class="field">
                    <%= f.text_field :email, class: "form-control mt10", placeholder: "Email" %>
                  </div>
              </div>
              <div class="panel-footer">
                  <div class="field">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
                  </div>
                  <div class="field">
                    <%= f.password_field :password_confirmation, class: "form-control mt10", placeholder: "Confirm Password" %>
                  </div>
                <li></li>
            </div>
          </ul>
        </div>
        <div class="modal-footer margin_model">
          <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close Window</button>
          <%= f.button '<i class="icon-save"></i> Save'.html_safe, class: "btn btn-danger pt4and4 pull-right mr10", title: "Save changes to your profile"  %>

          <% end %>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div>
