<%= form_for(@message, class: "thankspage") do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% unless current_user.present? %>

    <%= fields_for(@finder) do |ff| %>
      <div class="field">
      <%= ff.text_field :first_name, class: "form-control", placeholder:"First Name" %>
      </div>
        <div class="field">

        <%= ff.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
      </div>

      <div class="field">
        <br>
        <%= ff.text_field :cell_number, class: "form-control", placeholder: "Cell Number" %>
      </div>
      <div class="field">
        <br>
        <%= ff.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
      <div class="field">
        <br>
        <%= ff.password_field :password, class: "form-control", placeholder: "Enter Password" %>
      </div>
        <div class="field">
        <br>
        <%= ff.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
      </div>
    <% end %>

  <% end %>

  <div>
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </div>

  <div>
    <%= f.label :text, "Message" %><br>
    <%= f.text_area :text, class: "test_area_size" %>
  </div>

  <div>
    <%= hidden_field_tag :owner_id, @user.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
